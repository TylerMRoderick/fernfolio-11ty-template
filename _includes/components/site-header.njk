<header class="site-header">
  <span class="site-header__logo">
    <a class="site-header__link" href="{{ '/' | url }}">{{ metadata.title }}</a>
  </span>
  <nav class="site-header__nav">
    {% set navPages = collections.all | eleventyNavigation %}
    <ul class="site-header__items">
    {%- for entry in navPages %}
      {% if entry.url != '/' %}
        <li class="site-header__item">
          <a class="site-header__link" href="{{ entry.url | url }}"{% if entry.url == page.url %} data-current="current item"{% endif %}>{{ entry.title }}</a>
        </li>
      {% endif %}
    {%- endfor %}
    </ul>
  </nav>
</header>
